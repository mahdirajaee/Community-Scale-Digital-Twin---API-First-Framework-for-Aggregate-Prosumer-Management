# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/digital_twin
POSTGRES_DB=digital_twin
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Service URLs and Ports
FORECASTING_SERVICE_URL=http://localhost:8001
OPTIMIZATION_SERVICE_URL=http://localhost:8002
SIMULATION_SERVICE_URL=http://localhost:8003
DASHBOARD_PORT=8501

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
ELECTRICITY_PRICE_API_KEY=your-price-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/application.log

# ML Model Configuration
MODEL_CACHE_DIR=./models/cache
MODEL_RETRAIN_INTERVAL_HOURS=24
FORECASTING_HORIZON_HOURS=24

# Performance Settings
MAX_WORKERS=4
MAX_PROSUMERS_PER_COMMUNITY=10000
OPTIMIZATION_TIMEOUT_MINUTES=5
SIMULATION_TIMEOUT=300
BATCH_SIZE=100

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Development Settings
DEVELOPMENT_MODE=true
ENABLE_CORS=true
ENABLE_DOCS=true
